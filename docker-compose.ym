version: '3.8'

services:
  jenkins:
    image: ${JENKINS_IMAGE}
    container_name: ${JENKINS_CONTAINER_NAME}
    restart: unless-stopped
    ports:
      - "${JENKINS_PORT}:8080"
      - "${JENKINS_AGENT_PORT}:50000"
    volumes:
      - ${JENKINS_VOLUME}:/var/jenkins_home
    networks:
      - ${NETWORK_NAME}

networks:
  ${NETWORK_NAME}:
    driver: bridge

volumes:
  ${JENKINS_VOLUME}:
